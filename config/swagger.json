    "definitions": {
        "Book": {
          "type": "object",
          "required": [
            "isbn",
            "title",
            "published",
            "pages",
            "image"
          ],
          "properties": {
            "isbn": {
              "type": "string",
              "example": "23-3213243567"
            },
            "title": {
                "type": "string",
                "example": "My First Book"
              },
            "published": {
              "type": "number",
              "example": 2018
            },
            "pages": {
              "type": "number",
              "example": 200
            },
            "image": {
              "type": "string",
              "example": "nsnns"
            },
            "authors": {
                "type": "array",
                "example": ["isbn1","isbn2"]
              }
          }
        },
        "User": {
            "type": "object",
            "required": [
              "email",
              "password"
            ],
            "properties": {
              "email": {
                "type": "string",
                "example": "user@email.com"
              },
              "password": {
                  "type": "string",
                  "example": "password"
                }
            }
        },
        "Author": {
            "type": "object",
            "required": [
              "first_name",
              "last_name",
              "dob",
              "image",
              "books"
            ],
            "properties": {
                "first_name": {
                    "type": "string",
                    "example": "FirstName"
                  },
                "last_name": {
                  "type": "string",
                  "example": "LastName"
                },
                "dob": {
                  "type": "string",
                  "example": "1970-08-26 23:00:00"
                },
                "image": {
                  "type": "string",
                  "example": "nsnns"
                },
                "books": {
                    "type": "array",
                    "example": ["id1","id2"]

              }
            }
        }
